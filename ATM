import java.util.Scanner;
public class denomination {
public static void main(String args[]) {
int a,b,c,d,total;
total=0;
Scanner sc = new Scanner(System.in);
System.out.print("Enter the 1st Denomination: 500\n");
System.out.println("Enter the 1st Denomination number of notes:");
a = sc.nextInt();
System.out.print("Enter the 2nd Denomination: 100\n");
System.out.println("Enter the 2nd Denomination number of notes:");
b = sc.nextInt();
System.out.print("Enter the 3rd Denomination: 200\n");
System.out.println("Enter the 3rd Denomination number of notes:");
c = sc.nextInt();
System.out.print("Enter the 4th Denomination: 2000\n");
System.out.println("Enter the 4th Denomination number of notes:");
d = sc.nextInt();	
total=a*500+b*100+c*200+d*2000;
System.out.println("Total Available Balance in ATM:"+total);
}
}
